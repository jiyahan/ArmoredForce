<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<!-- mysql数据库相关配置 -->
	<database>
		<host>localhost</host>				<!-- 数据库主机IP地址 -->
		<port>3306 </port>					<!-- 数据库端口 -->		
		<user>root</user>					<!-- 帐户名 -->
		<pwd>holyshit</pwd>					<!-- 密码 -->
		<default>account_db</default>		<!-- 默认数据库 -->
		<charset>gbk</charset>				<!-- 传输编码格式 -->
		<conn_pool_size>8</conn_pool_size>	<!-- 连接池大小 -->
		<max_idle_time>5</max_idle_time>	<!-- 连接空闲时间(秒) -->
	</database>
	
	<!-- loginserver监听的IP和端口 -->
	<server host="10.226.34.41" port="32450"/>
	
	<!-- CenterServer的RPC客户端连接 -->
	<centerserver host="127.0.0.1" port="42200" />

	<!-- 配置池大小和线程数量 -->
	<atom pool_size="10485760" thread_num="1" />
	
</config>
